<% section["sub_sections"].each do |sub_section| %>
  <% if sub_section["title"] %>
    <% if sub_section["hub_url"] %>
      <a class="govuk-link covid__page-guidance-link" href="<%= sub_section["hub_url"] %>">
        <%= sub_section["text"] %>
      </a>
    <% else %>
      <h3 class="govuk-heading-s covid__accordion-heading"><%= sub_section["title"] %></h3>
    <% end %>
  <% end %>
  <ul class="covid__list covid__list--accordion">
    <% sub_section["list"].each do | item | %>
      <li class="covid__list-item">
        <a class="govuk-link covid__accordion-link <%= "covid__page-guidance-link" if item["featured_link"] %>" href="<%= item["url"] %>"><%= item["label"] %></a>
      </li>
    <% end %>
  </ul>
<% end %>
