<section>
  <% if @other_links.any? %>
    <div class="grid-row">
      <div class="column-two-thirds">
        <%= render partial: 'featured_taxons', locals: { display_full_width: false } %>
      </div>
      <div class="column-one-third">
        <h3 class="campaign__other-topics-title"><%= t("campaign.other_topics") %></h3>
        <ul class="campaign__other-topics-list" data-module="track-click">
        <% @other_links.each do |link| %>
          <li class="campaign__other-topics-item">
            <%= link_to(
              link.title,
              link.link,
              "aria-label": "#{t('campaign.see_more_in_taxon', topic: link.title.downcase)}",
              data: {
                "track-category": "sideNavTopics",
                "track-action": link.title
              }
            ) %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  <% else %>
    <%= render partial: 'featured_links' %>
  <% end %>
</section>
