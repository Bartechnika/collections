<% if presented_taxon.show_organisation_logos? %>
  <div class="taxon-page__section-group">
    <div class="grid-row">
      <div class="column-two-thirds">
        <h2 class="taxon-page__section-heading">Organisations</h2>
        <% presented_taxon.organisations_with_logo.each do |organisation|%>
          <% if organisation.custom_logo? %>
            <%= render 'organisation_custom_logo', organisation: organisation %>
          <% else %>
            <%= render 'organisation_crest', organisation: organisation  %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
